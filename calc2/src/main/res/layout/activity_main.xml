<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="calc2"
    android:orientation="vertical"
    android:columnCount="5"
    android:rowCount="9">


    <EditText
        android:id="@+id/edit1"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:hint="숫자1"/>
    <EditText
        android:id="@+id/edit2"
        android:layout_columnSpan="5"
        android:layout_gravity="fill_horizontal"
        android:hint="숫자2"/>

    <Button
        android:id="@+id/btnN0"
        android:layout_column="0"
        android:layout_row="2"
        android:text="0"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnN1"
        android:layout_column="1"
        android:layout_row="2"
        android:layout_width="70dp"
        android:text="1"/>
    <Button
        android:id="@+id/btnN2"
        android:layout_column="2"
        android:layout_row="2"
        android:layout_width="70dp"
        android:text="2"/>
    <Button
        android:id="@+id/btnN3"
        android:layout_column="3"
        android:layout_row="2"
        android:layout_width="70dp"
        android:text="3"/>
    <Button
        android:id="@+id/btnN4"
        android:layout_column="4"
        android:layout_row="2"
        android:layout_width="70dp"
        android:text="4"/>
    <Button
        android:id="@+id/btnN5"
        android:layout_column="0"
        android:layout_row="3"
        android:text="5"
        android:layout_width="70dp"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnN6"
        android:layout_column="1"
        android:layout_row="3"
        android:layout_width="70dp"
        android:text="6"/>
    <Button
        android:id="@+id/btnN7"
        android:layout_column="2"
        android:layout_row="3"
        android:layout_width="70dp"
        android:text="7"/>
    <Button
        android:id="@+id/btnN8"
        android:layout_column="3"
        android:layout_row="3"
        android:layout_width="70dp"
        android:text="8"/>
    <Button
        android:id="@+id/btnN9"
        android:layout_column="4"
        android:layout_row="3"
        android:layout_width="70dp"
        android:text="9"/>


    <Button
        android:id="@+id/add"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_row="4"

        android:layout_gravity="fill_horizontal"
        android:text="더하기"/>
    <Button
        android:id="@+id/sub"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_row="5"
        android:layout_gravity="fill_horizontal"
        android:text="빼기"/>
    <Button
        android:id="@+id/mul"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_row="6"
        android:layout_gravity="fill_horizontal"
        android:text="곱하기"/>
    <Button
        android:id="@+id/div"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_row="7"
        android:layout_gravity="fill_horizontal"
        android:text="나누기"/>


    <TextView
        android:id="@+id/text1"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_row="8"
        android:layout_gravity="fill_horizontal"
        android:textSize="15dp"
        android:text="계산 결과 : "
        android:textColor="#e21010"/>


</GridLayout>